<h1>Students#index</h1>
<p>Find me in app/views/students/index.html.erb</p>
<br/>
<div class="d-flex justify-content-between">
<div class="float-right">
<%= link_to("Add Students", new_student_path, :class=>'btn btn-success btn-sm action add ') %>
</div>
</div>

<table class="table" summary="Student list">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Teacher</th>
      <th scope="col">Active</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.position %></td>
      <td><%= student.name %></td>
      <td><%= student.teacher.name %></td>
      <td><%= student.active ? 'Active':'Inactive' %></td>
      <td>
      <%= link_to("Show", student_path(student), :class=>'action show') %>
      <%= link_to("Edit", edit_student_path(student), :class=>'action edit') %>
      <%= link_to("Delete", delete_student_path(student), :class=>'action delete') %>
      
      </td>
    </tr>
  <% end %>  
  </tbody>
</table>
